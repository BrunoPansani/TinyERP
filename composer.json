{
  "name": "uilia/tinyerp",
  "description": "Integração básica para consumir API do Tiny ERP.",
  "keywords": [
    "UILIA",
    "Tiny ERP"
  ],
  "homepage": "https://www.uilia.com.br",
  "license": "MIT",
  "authors": [
    {
      "name": "William Alvares",
      "email": "william@uilia.com.br",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.0.17",
    "ext-json": "*",
    "ext-curl": "*"
  },
  "autoload": {
    "psr-4": {
      "Uilia\\Api\\": "src"
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3",
    "phpcompatibility/php-compatibility": "^9.3"
  },
  "scripts": {
    "sniffer:php8": "phpcs -p ./src --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility --runtime-set testVersion 8.0"
  }
}
